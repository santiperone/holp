{
    "compilerOptions": {
        "target": "esnext",
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": "./src",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist",
    },
    "include": ["src/**/*"],
}
